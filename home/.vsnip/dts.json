{
    "ld_dt_overlay": {
        "prefix": "ld_probe",
        "body": [
            "/dts-v1/;",
            "/plugin/;",
            "",
            "/ {",
            "    compatible = \"${1:brcm,bcm2835}\";",
            "    fragment@0 {",
            "        target-path = \"/\";",
            "        __overlay__ {",
            "            ${2:my_device} {",
            "                compatible = \"${3:brightlight,mydev}\";",
            "                status = \"okay\";",
            "                label = \"${4:Test}\";",
            "                my_value = <${5:12}>;",
            "            };",
            "        };",
            "    };",
            "};"
        ],
        "description": "Device tree overlay for custom device node"
    },
    "ld_i2c": {
        "prefix": "ld_i2c",
        "body": [
            "/dts-v1/;",
            "/plugin/;",
            "",
            "/ {",
            "    compatible = \"${1:brcm,bcm2835}\";",
            "",
            "    fragment@0 {",
            "        target = <&${2:i2c1}>;",
            "        __overlay__ {",
            "            #address-cells = <1>;",
            "            #size-cells = <0>;",
            "",
            "            ${3:my_adc}: ${3:my_adc}@${4:10} {",
            "                compatible = \"${5:brightlight,myadc}\";",
            "                reg = <0x${4:10}>;",
            "                status = \"okay\";",
            "            };",
            "        };",
            "    };",
            "};"
        ],
        "description": "Device tree overlay for I2C device node"
    },
    "Device Tree Overlay for I2C IIO ADC": {
        "prefix": "ld_iio_i2c",
        "body": [
            "/dts-v1/;",
            "/plugin/;",
            "",
            "/ {",
            "  compatible = \"${1:brcm,bcm2835}\";",
            "",
            "  fragment@0 {",
            "    target = <&${2:i2c1}>;",
            "    __overlay__ {",
            "      #address-cells = <1>;",
            "      #size-cells = <0>;",
            "",
            "      ${3:my_adc}: ${3}@${4:10} {",
            "        compatible = \"${5:brightlight,myadc}\";",
            "        reg = <0x${4}>;",
            "        status = \"okay\";",
            "      };",
            "    };",
            "  };",
            "};"
        ],
        "description": "Device Tree Overlay for I2C-based IIO ADC device"
    },
    "ld_spi": {
        "prefix": "ld_spi",
        "body": [
            "/dts-v1/;",
            "/plugin/;",
            "",
            "/ {",
            "    compatible = \"${1:brcm,bcm2835}\";",
            "    fragment@0 {",
            "        target = <&${2:spidev0}>;",
            "        __overlay__ {",
            "            status = \"disabled\";",
            "        };",
            "    };",
            "",
            "    fragment@1 {",
            "        target = <&${3:spi0}>;",
            "        __overlay__ {",
            "            status = \"okay\";",
            "            #address-cells = <1>;",
            "            #size-cells = <0>;",
            "",
            "            ${4:my_adc}: ${4:my_adc}@${5:0} {",
            "                compatible = \"${6:brightlight,myadc}\";",
            "                reg = <0x${5:0}>;",
            "                spi-max-frequency = <${7:4000}>;",
            "                spi-bits-per-word = <${8:8}>;",
            "                status = \"okay\";",
            "            };",
            "        };",
            "    };",
            "};"
        ],
        "description": "Device Tree Overlay for SPI device node"
    },
    "Device Tree Overlay for SPI IIO ADC": {
        "prefix": "ld_spi_iio",
        "body": [
            "/dts-v1/;",
            "/plugin/;",
            "",
            "/ {",
            "  compatible = \"${1:brcm,bcm2835}\";",
            "",
            "  fragment@0 {",
            "    target = <&${2:spidev0}>;",
            "    __overlay__ {",
            "      status = \"disabled\";",
            "    };",
            "  };",
            "",
            "  fragment@1 {",
            "    target = <&${3:spi0}>;",
            "    __overlay__ {",
            "      status = \"okay\";",
            "      #address-cells = <1>;",
            "      #size-cells = <0>;",
            "",
            "      ${4:my_adc}: ${4}@${5:0} {",
            "        compatible = \"${6:brightlight,myadc}\";",
            "        reg = <0x${5}>;",
            "        spi-max-frequency = <${7:4000}>;",
            "        spi-bits-per-word = <${8:8}>;",
            "        status = \"okay\";",
            "      };",
            "    };",
            "  };",
            "};"
        ],
        "description": "Overlay for an SPI IIO ADC device on spi0 with custom node name and parameters"
    },
    "ld_gpio": {
        "prefix": "ld_gpio",
        "body": [
            "/dts-v1/;",
            "/plugin/;",
            "",
            "/ {",
            "  compatible = \"${1:brcm,bcm2835}\";",
            "",
            "  fragment@0 {",
            "    target-path = \"/\";",
            "    __overlay__ {",
            "      ${2:my_device} {",
            "        compatible = \"${3:brightlight,mydev}\";",
            "        status = \"okay\";",
            "        label = \"${4:Test}\";",
            "        my_value = <${5:12}>;",
            "        green-led-gpio = <&gpio ${6:21} ${7:0}>;",
            "      };",
            "    };",
            "  };",
            "};"
        ],
        "description": "Device Tree Overlay snippet with GPIO binding"
    },
    "serdev echo device tree overlay": {
        "prefix": "ld_uart",
        "body": [
            "/dts-v1/;",
            "/plugin/;",
            "",
            "/ {",
            "  compatible = \"brcm,bcm2835\";",
            "",
            "  fragment@0 {",
            "    target = <&${1:uart1}>;",
            "    __overlay__ {",
            "      ${2:echodev}: ${2:echodev} {",
            "        compatible = \"${3:brightlight,echodev}\";",
            "        status = \"okay\";",
            "      };",
            "    };",
            "  };",
            "};"
        ],
        "description": "Device Tree Overlay for UART serdev echo device"
    }
}
