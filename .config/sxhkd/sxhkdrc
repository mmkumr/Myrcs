#Set environment variables.
# Basic binds
super + Return
	$TERMINAL
super + d
	rofi -modi drun,window,run,keys,ssh -show drun -show-icons -sidebar-mode
super + n
    $TERMINAL  -t "nautilus" -e $FILE 
super + e
	$TERMINAL -e neomutt
super + m
    $TERMINAL -e "sudo simple-mtpfs --device 1 /media/mmkumr/Android -o allow_other"
super + shift + m
    $TERMINAL -e "sudo fusermount -u /media/mmkumr/Android"
super + w
	firefox
super + shift + g
	gimp

# Et cetera...
super + Scroll_Lock
	killall screenkey || screenkey
super + Insert
	showclip
super + shift + x
    $TERMINAL -e rofi -show powermenu -modi powermenu:/home/mmkumr/.config/sxhkd/powermenu
super + x
    xset dpms force off; /usr/bin/slimlock

XF86AudioRaiseVolume 
    pactl set-sink-volume 0 +5% #increase sound volume
XF86AudioLowerVolume 
    pactl set-sink-volume 0 -5% #decrease sound volume
XF86AudioMute 
    pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls
XF86MonBrightnessUp 
    sudo light -A 2 # increase screen brightness
XF86MonBrightnessDown 
    sudo light -U 2 # decrease screen brightness

# Media player controls
XF86AudioPlay 
    playerctl play-pause
XF86AudioPause 
    playerctl pause
XF86AudioNext 
    playerctl next
XF86AudioPrev
    playerctl previous

# Recording
# Take screenshot
shift + Print
	gnome-screenshot -a -i 
# Pick screenshot type
Print
	gnome-screenshot 
# Record audio or video
super + Print
	peek

# Function keys
# F2 is restart in i3 right now.
# Change display
super + F3
	displayselect

super + F5
	sudo -A systemctl restart NetworkManager
# sync email
super + F8
	mailsync
# Mount a USB drive or Android device
super + F9
	dmenumount
# Unmount a USB drive or Android device
super + F10
	dmenuumount
# Network Manager interface
super + F12
	$TERMINAL -e sudo -A nmtui


